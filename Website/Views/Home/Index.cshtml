@model Website.Models.Modeller
@{
    ViewData["Title"] = "Home Page";
}

<ul data-role="listview" data-inset="true" data-filter="true" data-filter-placeholder="Search confessions...">

    @if (Model.ConfessLoaders != null)
    {
        DateTime currentDate = DateTime.UtcNow;

        foreach (var con in Model.ConfessLoaders)
        {
           // string shortTime = con.DateReal.ToShortTimeString();
            <li data-role="list-divider">
                <span class="ui-nodisc-icon">
                    <span class="ui-btn-inline ui-corner-all">@con.Date </span>
                    <img class="vertical" src="https://res.cloudinary.com/fzany-inc/image/upload/v1551645521/icons8-facebook-like-14_aaethh.png" />
                    <span class="ui-btn-inline ui-corner-all">@con.Likes</span>
                    <img class="vertical" src="https://res.cloudinary.com/fzany-inc/image/upload/v1551646163/icons8-thumbs-down-14_wcxh7c.png" />
                    <span class="ui-btn-inline ui-corner-all">@con.DisLikes</span>
                    <img class="vertical" src="https://res.cloudinary.com/fzany-inc/image/upload/v1551644633/comment-black_htxdh2.png" />
                    <span class="ui-btn-inline ui-corner-all">@con.CommentCount</span>
                    <img class="vertical" src="https://res.cloudinary.com/fzany-inc/image/upload/v1551644541/eye-black_owsr1r.png" />
                    <span class="ui-btn-inline ui-corner-all">@con.Seen</span>
                </span>
                @*@con.Date <span class="ui-corner-all ui-btn-icon-right ui-icon-eye"><span class="ui-li-count">@con.Seen</span></span>
                    <span class="ui-corner-all ui-btn-icon-right ui-icon-comment"><span class="ui-li-count">@con.CommentCount</span></span>*@
            </li>
            <li>
                <a href='@Url.Action("Detail","Home")/@con.Guid'>
                    <h2><span>@con.Category : </span> @con.Title</h2>
                    <p>@con.Body</p>
                   @*<p class="ui-li-aside"><strong>@shortTime</strong></p>*@
                </a>
            </li>
            currentDate = con.DateReal;
        }


    }
</ul>
